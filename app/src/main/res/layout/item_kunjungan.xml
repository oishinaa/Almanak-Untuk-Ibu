<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/lnlBlankSta">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:id="@+id/txtBlankHeaderSta" />

        <TextView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="@color/dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:id="@+id/txtHeader" />

        <TextView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:text="1"
            android:id="@+id/txtNo" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="@color/dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:paddingVertical="2.5dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_corner_grey"
            android:textColor="@color/dark"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:id="@+id/txtKeterangan" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/lnlLine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:id="@+id/txtLineHeaderSta" />

            <TextView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="@color/dark" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/pink" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:id="@+id/txtLineHeaderEnd" />

            <TextView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="@color/dark" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:id="@+id/lnlBlankEnd">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:id="@+id/txtBlankHeaderEnd" />

        <TextView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="@color/dark" />

    </LinearLayout>

</LinearLayout>